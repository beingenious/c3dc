
= stylesheet_link_tag 'general/bootstrapValidator.min'
= stylesheet_link_tag "user/registrations/new"
= stylesheet_link_tag "user/form"

= content_for :javascripts do
  = javascript_include_tag "general/bootstrapValidator.min.js"
  = javascript_include_tag "general/frameworkBootstrap.min.js"
  = javascript_include_tag "general/bootstrapValidator_#{I18n.locale}.js"
  = javascript_include_tag "user/registrations/new.js"

.registration.form-container
  = image_tag 'logo.png'
  %form#sign_up.form-horizontal
    .form-group
    .form-group
      = text_field_tag :username, '', class: "form-control", placeholder: "User name"
    .form-group
      = text_field_tag :email, '', class: "form-control", placeholder: :Email
    .form-group
      = password_field_tag :password, '', class: "form-control", placeholder: :Password
    .form-group
      = password_field_tag :password_confirmation, '', class: "form-control", placeholder: "Confirmation password"
    .form-group
      / Do NOT use name="submit" or id="submit" for the Submit button
      %button.btn.btn-primary.btn-lg{:type => "submit"}=t('button.signup')
