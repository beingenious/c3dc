= stylesheet_link_tag 'general/bootstrapValidator.min'
= stylesheet_link_tag "user/sessions/new"
= stylesheet_link_tag "user/form"

= content_for :javascripts do
  = javascript_include_tag "general/bootstrapValidator.min.js"
  = javascript_include_tag "general/frameworkBootstrap.min.js"
  = javascript_include_tag "general/bootstrapValidator_#{I18n.locale}.js"
  = javascript_include_tag "user/sessions/new.js"

.sessions.form-container
  = image_tag 'logo.png'
  %form#sign_in.form-horizontal
    .form-group.erros
      = hidden_field_tag :client_id, '35e934e25c22fe7d806a'
      = hidden_field_tag :client_secret, 'dddf466940feab08d4d9d539409eaa4a4922ddb7'
      = hidden_field_tag :grant_type, 'password'
    .form-group
      = text_field_tag :username, '', class: "form-control", placeholder: 'Login'
    .form-group
      = password_field_tag :password, '',  class: "form-control", placeholder: :Password
    .form-group
      / Do NOT use name="submit" or id="submit" for the Submit button
      %button.btn.btn-primary.btn-lg{:type => "submit"}=t('button.login')
      .forget-link
        = link_to 'forget password'
      .no_account
        %p Don't have account
        .right
          = link_to 'sign up', 'sign_up',class: "btn btn-default btn-lg"

